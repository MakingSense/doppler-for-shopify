    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "shopify-api-node": "^3.4.4",
    "style-loader": "~0.23.1",
    "url": "^0.11.0",
    "webpack": "^2.7.0",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-dev-server": "^3.11.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-middleware": "^1.5.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "co-mocha": "^1.2.2",
    "eslint": "^7.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "global": "^4.4.0",
    "mocha": "^5.2.0",
    "node-mocks-http": "^1.9.0",
    "nyc": "^15.1.0",
    "postcss-loader": "^3.0.0",
