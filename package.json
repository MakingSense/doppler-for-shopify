{
  "name": "doppler-for-shopify",
  "version": "1.0.0-rc1",
  "private": true,
  "scripts": {
    "prod": "yarn run clean && yarn run build && cross-env NODE_ENV=production yarn run start-prod",
    "dev": "cross-env NODE_ENV=development yarn run start",
    "start-prod": "pm2 start ./bin/www.js",
    "start": "nodemon ./bin/www",
    "build": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.js --progress --profile --colors",
    "clean": "rm -rf ./assets && mkdir ./assets",
    "pretty": "prettier --single-quote --trailing-comma es5 --write {client,bin,config,server}{/*,/**/*}.js",
    "precommit": "yarn run pretty",
    "test": "npm run test-unit",
    "test-unit": "cross-env NODE_ENV=test nyc --reporter=text mocha --require co-mocha './server/**/*.spec.js'"
  },
  "engines": {
    "node": ">= 8.1.0"
  },
  "browsers": [
    "last 3 chrome versions",
    "last 3 firefox versions",
    "last 2 versions",
    "safari >= 8",
    "ios >= 8",
    "ie >= 11",
    "explorermobile >= 11",
    "android >= 4.4"
  ],
  "dependencies": {
    "@shopify/polaris": "2.2.0",
    "@shopify/shopify-express": "1.0.0-alpha.7",
    "autoprefixer": "6.7.7",
    "babel-core": "6.26.3",
    "babel-loader": "7.1.4",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "chalk": "2.4.1",
    "connect-redis": "3.3.3",
    "cross-env": "^5.1.3",
    "css-loader": "0.28.11",
    "debug": "2.6.9",
    "dotenv": "4.0.0",
    "ejs": "2.5.9",
    "express": "4.16.3",
    "express-session": "1.15.6",
    "file-loader": "^1.1.11",
    "knex": "0.13.0",
    "morgan": "1.8.2",
    "nodemon": "1.17.5",
    "proxyquire": "2.0.1",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-hot-loader": "3.1.3",
    "react-object-inspector": "0.2.1",
    "react-redux": "5.0.7",
    "react-responsive-modal": "3.0.3",
    "react-router": "3.2.0",
    "react-router-redux": "4.0.8",
    "redis": "2.8.0",
    "redux": "3.7.2",
    "redux-immutable-state-invariant": "2.1.0",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.3.0",
    "shopify-api-node": "2.14.0",
    "sqlite3": "3.1.13",
    "style-loader": "0.18.2",
    "url": "0.11.0",
    "webpack": "2.7.0",
    "webpack-dev-middleware": "2.0.6",
    "webpack-dev-server": "2.11.2",
    "webpack-hot-middleware": "2.22.2",
    "webpack-middleware": "1.5.1"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "co-mocha": "1.2.2",
    "eslint": "3.19.0",
    "eslint-plugin-prettier": "2.7.0",
    "global": "4.4.0",
    "mocha": "5.2.0",
    "nyc": "11.9.0",
    "postcss-loader": "2.1.5",
    "prettier": "1.13.5",
    "sinon": "5.1.1",
    "sinon-chai": "3.2.0",
    "sinon-express-mock": "2.0.4",
    "supertest": "3.1.0"
  }
}
